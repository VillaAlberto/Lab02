            <Font name="System Bold" size="13.0" />
         </font>
      </Label>
   </top>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <center>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <HBox spacing="15.0">
               <children>
                  <AnchorPane>
                     <children>
                        <Label layoutX="14.0" layoutY="17.0" text="Alien Text" />
                        <Button fx:id="btnTranslate" alignment="CENTER_RIGHT" layoutX="74.0" layoutY="13.0" mnemonicParsing="false" onAction="#doTranslate" text="Translate" textAlignment="CENTER" AnchorPane.leftAnchor="250.0" />
