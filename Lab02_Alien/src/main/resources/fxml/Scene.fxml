      </VBox>
   </center>
   <bottom>
      <Button fx:id="btnClear" mnemonicParsing="false" onAction="#doReset" text="Clear Text" textAlignment="CENTER" BorderPane.alignment="CENTER_RIGHT">
         <BorderPane.margin>
            <Insets top="20.0" />
         </BorderPane.margin>
      </Button>
   </bottom>
</BorderPane>
